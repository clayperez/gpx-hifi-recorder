{
  "name": "gps-tracker-electron",
  "version": "1.0.0",
  "description": "Electron GPS tracking application with Columbus P-7 Pro GNSS Receiver",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:nuxt\" \"npm run dev:electron\"",
    "dev:nuxt": "nuxt dev",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "nuxt build",
    "build:electron": "npm run build && electron-builder",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "@nuxt/ui": "^2.18.4",
    "@pinia/nuxt": "^0.7.0",
    "@vueuse/nuxt": "^11.0.0",
    "pinia": "^2.2.2",
    "pinia-plugin-persistedstate": "^3.2.3",
    "serialport": "^12.0.0",
    "@serialport/parser-readline": "^12.0.0",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.5.2",
    "@unocss/nuxt": "^0.63.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.2.3",
    "electron-builder": "^25.1.8",
    "nuxt": "^3.13.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.yourcompany.gps-tracker",
    "productName": "GPS Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".output/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
